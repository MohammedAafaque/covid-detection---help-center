<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="app.css">
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/png" href="favicon.png">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        #map {
            width: 100vw;
            height: 100vh;
            position: fixed;
        }
    </style>
    <title>Global Cases</title>
</head>
<body">
    <div id='map'></div>
    <div class="container">   
        <div class="mapDataContainer">
            <table class="table text-center" id="tbval">
                <tr class="tableHeadings">
                    <th>&emsp; COUNTRY</th>
                    <th>TOTAL CASES</th>
                    <th>TOTAL RECOVERED</th>
                    <th>TOTAL DEATHS</th>
                </tr>
                <% allData.forEach(function(country){ %>
                    <tr>
                        <td class="country">
                            <div style="float: left;">
                            <img src="<%= country.countryInfo.flag %>" width="50" height="30" class="flags">
                            </div>
                            <%= country.country %>
                        </td>
                        <td>
                            <%= country.cases %> <br>
                            <div class="todayCases">
                                +<%= country.todayCases %>
                            </div>
                        </td>
                        <td>
                            <%= country.recovered %> <br>
                            <div class="todayRecovered">
                                +<%= country.todayRecovered %>
                            </div>
                        </td>
                        <td>
                            <%= country.deaths %> <br>
                            <div class="todayDeaths">
                                +<%= country.todayDeaths %>
                            </div>
                        </td>
                    </tr>
                    <% }); %>

            </table>
        </div>
    </div>

    <!-- <div class="table-responsive"> -->

    <!-- </div> -->
    </body>


    <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js'></script>

    <script>
        mapboxgl.accessToken = 'pk.eyJ1IjoibW9oYW1tZWQtYWFmYXF1ZSIsImEiOiJja3IyOXduY2Uxc2ZoMnBueG84c3kzNDlkIn0.0E1FwJ2tYEqlpCSjss5fXA';
        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/dark-v10'
        });
    </script>

    <script src="globalmap.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

</html>